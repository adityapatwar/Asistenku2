<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_Home_Page"
    android:orientation="vertical"
    android:background="#00FBFAFB">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
                    android:text="Our Features"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"


                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/iv_masukkelas"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="20dp"
                            android:src="@drawable/icon_masuk_kelas"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Materi"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/iv_daftartugas"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="20dp"
                            android:src="@drawable/icon_list_tugas"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="Daftar Tugas"
                            android:gravity="center"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/iv_nilai"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="20dp"
                            android:src="@drawable/icon_masuk_kelas"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Nilai"
                            />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/iv_ruangdiskusi"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="20dp"
                            android:src="@drawable/icon_list_tugas"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Ruang Diskusi"
                            />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    >


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 Verb Per Day : "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        />

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:id="@+id/itemSlid"
                                android:layout_width="320dp"
                                android:layout_height="190dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/carousela"
                                android:orientation="horizontal">



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/itemSlid1"
                                android:layout_width="320dp"
                                android:layout_height="190dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/carouselb"
                                android:orientation="horizontal">



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/itemSlid2"
                                android:layout_width="320dp"
                                android:layout_height="190dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/carouselc"
                                android:orientation="horizontal">



                            </LinearLayout>


                        </LinearLayout>


                    </HorizontalScrollView>

                </LinearLayout>



            </LinearLayout>



        </ScrollView>



</FrameLayout>