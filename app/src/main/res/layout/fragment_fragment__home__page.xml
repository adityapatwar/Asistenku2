<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_Home_Page"
    android:orientation="vertical"
    android:background="#00FBFAFB">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
                    android:text="Our Features"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"


                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/iv_masukkelas"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="20dp"
                            android:src="@drawable/icon_masuk_kelas"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Materi"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/iv_daftartugas"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="20dp"
                            android:src="@drawable/icon_list_tugas"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="Daftar Tugas"
                            android:gravity="center"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/iv_nilai"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="20dp"
                            android:src="@drawable/icon_masuk_kelas"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Nilai"
                            />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/iv_ruangdiskusi"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="20dp"
                            android:src="@drawable/icon_list_tugas"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Ruang Diskusi"
                            />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    >


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 Verb Per Day : "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        />

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/itemSlid"
                                android:layout_width="320dp"
                                android:layout_height="190dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/carousela"
                                android:orientation="horizontal">


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/itemSlid1"
                                android:layout_width="320dp"
                                android:layout_height="190dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/carouselb"
                                android:orientation="horizontal">


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/itemSlid2"
                                android:layout_width="320dp"
                                android:layout_height="190dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/carouselc"
                                android:orientation="horizontal">


                            </LinearLayout>


                        </LinearLayout>


                    </HorizontalScrollView>

                </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_top"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_bg_top_absen">
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:src="@drawable/txt_title"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_lihatabsen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Lihat Absen"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <ImageView
                    android:id="@+id/iv_lihatabsen"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_btn"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/tv_lihatabsen"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_bottom"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="100dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/ic_bg_bottom_absen">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_absen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="42dp"
                    android:layout_marginEnd="125dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:id="@+id/lv_absen"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/corners"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:id="@+id/tv_totalsiswa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="Total Siswa : 26 Orang"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/v_alfa"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_izin"
>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/ic_bg_alfa"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_alfa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="TEST"
                            />
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/v_izin"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_hadir">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/ic_bg_izin"
                        android:layout_height="match_parent">
                        <TextView

                            android:id="@+id/tv_izin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="TEST"
                            />
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/v_hadir"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="22dp"
                    android:layout_width="80dp"
                    android:layout_height="60dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/ic_bg_hadir"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_hadir"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="TEST"
                            />
                    </FrameLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>



            </LinearLayout>



        </ScrollView>



</FrameLayout>